{
  "name": "vue-ts-boilerplate",
  "description": " Vue.js 3 TypeScript Boilerplate with Pinia, Vue Router and Tailwind CSS ",
  "keywords": [
    "template",
    "boilerplate",
    "vuejs",
    "typescript",
    "vue",
    "starter",
    "ts",
    "vue-router",
    "starter-kit",
    "vuerouter",
    "tailwind",
    "tailwindcss",
    "tailwind-css",
    "pinia",
    "piniajs"
  ],
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "author": "richardevcom <hello@richardev.com> (https://github.com/richardevcom)",
  "scripts": {
    "dev": "vite --config vite.config.dev.mts",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview --config vite.config.prod.mts",
    "build-only": "vite build --config vite.config.prod.mts",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "vue": "^3.4.29",
    "vue-router": "^4.3.3"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.14.5",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "npm-run-all2": "^6.2.0",
    "postcss": "^8.4.40",
    "prettier": "^3.2.5",
    "sass": "^1.77.8",
    "tailwindcss": "^3.4.7",
    "typescript": "~5.4.0",
    "vite": "^5.3.1",
    "vite-plugin-vue-devtools": "^7.3.1",
    "vue-tsc": "^2.0.21"
  }
}
